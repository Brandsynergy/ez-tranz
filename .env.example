# Stripe API Keys (Platform Account - YOUR Stripe account)
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Connect OAuth
# Get this from: https://dashboard.stripe.com/settings/applications
# After creating a Connect application
STRIPE_CLIENT_ID=ca_your_client_id_here

# Application URLs (update for production)
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Service (Resend) - for sending receipts
# Sign up at: https://resend.com/signup (3,000 emails/month free)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
RECEIPT_FROM_EMAIL=receipts@yourdomain.com

# Google Maps API Key (for receipt location maps)
# Get from: https://console.cloud.google.com/
# Enable: Maps Embed API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Cloudinary (for logo uploads)
# Sign up at: https://cloudinary.com/users/register/free
# Get credentials from: https://console.cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here
